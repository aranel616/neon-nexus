# Mako Configuration - "Neon Nexus" Cyberpunk Theme
# Matches the floating cyberpunk Waybar theme

# Appearance
background-color=#1a1a1aE6
text-color=#ffffff
border-color=#ff6600
border-size=2
border-radius=8

# Typography
font=Fira Code 12
text-alignment=left

# Layout
width=350
height=120
margin=10,10,5,10
padding=15
anchor=top-right
max-visible=5

# Positioning
layer=overlay

# Behavior
default-timeout=8000
ignore-timeout=0
max-history=50
sort=-time

# Icons
icons=1
max-icon-size=48
icon-location=left

# Progress bars
progress-color=over #ff6600

# Close behavior
on-button-left=dismiss
on-button-middle=none
on-button-right=dismiss-all
on-touch=dismiss

# Urgency-specific styling
[urgency=low]
background-color=#1a1a1aCC
border-color=#66cc99
default-timeout=5000

[urgency=normal]
background-color=#1a1a1aE6
border-color=#ff6600
default-timeout=8000

[urgency=critical]
